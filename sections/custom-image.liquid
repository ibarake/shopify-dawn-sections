<style>
  .custom-image img {
    width: 100%;
    height: auto;
    display: block;
  }
</style>
<section class="custom-image page-width">
  {{
    section.settings.image1
    | image_url: width: 1920
    | image_tag: width: '1920px', class: 'image-custom-d', load: 'lazy'
  }}
  {{
    section.settings.image2
    | image_url: width: 768
    | image_tag: width: '768px', class: 'image-custom-r', load: 'lazy'
  }}
</section>

{% schema %}
{
  "name": "Custom image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image1",
      "label": "Imagen Desktop"
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Imagen Telefono"
    }
  ],
  "presets": [
    {
      "name": "custom image"
    }
  ]
}
{% endschema %}

