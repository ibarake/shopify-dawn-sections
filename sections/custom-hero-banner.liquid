<div class="hero-banner-container" style="
background-image: url({{ section.settings.image | image_url }});
background-position: {{ section.settings.img-position }};
">
  <div class="inside-container" style="margin-left: {{ section.settings.spacing }}px;">
    <div class="content-container" style="
    background-color: {{ section.settings.bg-color }};
    color: {{ section.settings.color }}
    ">
      <p class="heading-6">{{ section.settings.subheading }}</p>
      <p class="heading-2">{{ section.settings.heading }}</p>
      <button href="{{ section.settings.button_link }}" class="btn-hero-banner">Shop now</button>
    </div>
    <div class="content-spacer"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom hero banner",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
            "type": "number",
            "id": "spacing",
            "label": "overlay left spacing",
            "default": 300
      },
      {
            "type": "image_picker",
            "label": "hero image",
            "id": "image"
      },
      {
      "type": "color",
      "id": "bg-color",
      "label": "Overlay color",
      "default": "#FFFFFF"
      },
      {
      "type": "color",
      "id": "color",
      "label": "Text color",
      "default": "#FFFFFF"
      },
      {
        "type": "select",
        "id": "img-position",
        "label": "Image position",
        "options": [
          {
            "value": "left top",
            "label": "left top"
          },
          {
            "value": "left center",
            "label": "left center"
          },
          {
            "value": "left bottom",
            "label": "left bottom"
          },
          {
            "value": "right top",
            "label": "right top"
          },
          {
            "value": "right center",
            "label": "right center"
          },
          {
            "value": "right bottom",
            "label": "right bottom"
          },
          {
            "value": "center top",
            "label": "center top"
          },
          {
            "value": "center center",
            "label": "center center"
          },
          {
            "value": "center bottom",
            "label": "center bottom"
          }
        ],
        "default": "center center"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-banner-container{
    width: 100%;
    height: 540px;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .inside-container{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    height: 540px;
  }
  .content-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0px 0px;
    height: 540px;
    padding: 0 16px 0 16px;
  }
  .content-spacer{
    width: 60%;
  }
  p{
    margin-block-start: 0px;
    margin-block-end: 0px;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
  }
  .heading-6{
    font-size: 20px;
    text-transform: uppercase;
    font-weight: 300;
  }
  .heading-2{
    font-size: 28px;
    font-weight: 700;
    margin-top: -10px;
  }
  .btn-hero-banner{
    background: #363534;
    font-weight: 700;
    color: #fff;
    border: none;
    border-radius: 0.25rem;
    padding: 8px 16px 8px 16px;
    width: 100px;
    text-decoration: none;
    margin-top: 30px;
  }
  .btn-hero-banner:hover{
    background: #525252;
  }
{% endstylesheet %}

