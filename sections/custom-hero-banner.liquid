<div class="hero-banner-container" style="background-image: url({{ section.settings.image | image_url }})">
  <div class="inside-container">
    <div class="content-container" style="background-color: {{ section.settings.bg-color }}">
      <p class="heading-6">{{ section.settings.subheading }}</p>
      <p class="heading-2">{{ section.settings.heading }}</p>
      <button>Shop now</button>
    </div>
    <div class="content-spacer"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom hero banner",
    "settings": [
      {
            "type": "image_picker",
            "label": "hero image",
            "id": "image"
      },
      {
      "type": "color",
      "id": "bg-color",
      "label": "Overlay color",
      "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-banner-container{
    width: 100%;
    min-height: 340px;
    max-height: 100%;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    padding:  0 0 0 300px;
  }
  .inside-container{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    min-height: 340px;
    max-height: 100%;
  }
  .content-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0px 0px;
    min-height: 340px;
    max-height: 100%;
    padding: 0 50px 0 50px;
  }
  .content-spacer{
    width: 60%;
  }
  p{
    margin-block-start: 0px;
    margin-block-end: 0px;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
  }
  .heading-6{
    font-size: 20px;
    text-transform: uppercase;
    font-weight: 300;
  }
  .heading-2{
    font-size: 28px;
    font-weight: 700;
  }
{% endstylesheet %}

