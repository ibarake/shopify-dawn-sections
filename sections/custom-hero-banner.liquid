<div class="hero-banner-container" style="background-image: url({{ section.settings.image | image_url }})">
  <div class="inside-container">
    <div class="content-container" style="background-color: {{ section.settings.bg-color }}">
      <h6>{{ section.settings.subheading }}</h6>
      <h2>{{ section.settings.heading }}</h2>
      <button>Shop now</button>
    </div>
    <div class="content-spacer"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom hero banner",
    "settings": [
      {
            "type": "image_picker",
            "label": "hero image",
            "id": "image"
      },
      {
      "type": "color",
      "id": "bg-color",
      "label": "Overlay color",
      "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-banner-container{
    width: 100%;
    min-height: 340px;
    max-height: 100%;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
    padding:  0 0 0 100px;
  }
  .inside-container{
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    min-height: 340px;
    max-height: 100%;
  }
  .content-container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0;
    min-height: 340px;
    max-height: 100%;
    padding: 0 50px 0 50px;
  }
  .content-spacer{
    width: 60%;
  }
{% endstylesheet %}

