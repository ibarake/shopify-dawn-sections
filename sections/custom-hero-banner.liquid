<div class="hero-banner-container" style="background-image: url({{ section.settings.image | image_url }})">
  <div class="inside-container">
    <div class="content-container" style="{{settings.bg-color}}"></div>
    <div class="content-spacer"></div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom hero banner",
    "settings": [
      {
            "type": "image_picker",
            "label": "hero image",
            "id": "image"
      },
      {
      "type": "color",
      "id": "bg-color",
      "label": "Heading color",
      "default": "#FFFFFF"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
  .hero-banner-container{
    width: 100%;
    min-height: 340px;
    max-height: 100%;
    background-position: center center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  .content-container{
    
  }
{% endstylesheet %}

