{% style %}
.heading-categories{
  font-size: 24px;
  font-weight: 400;
  margin-bottom: 25px;
}
.subcategories{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.subcategory {
  width: 15%;
  margin: 10px;
}
.subcategory p{
  padding: 20px 35px 20px 35px;
  text-align: center;
  font-weight: 400;
  font-size: 18px;
  color: black;
}
.subcategory img{
  padding: 20px;
  position: center;
  object-fit: contain;
  aspect-ratio: 1 / 1;
  width:100%;
}
{% endstyle %}


{% assign macrocategory = page.metafields.custom.reference.value %}
{% assign subcategories = macrocategory.subcategories %}

<div class="page-width">
  <p class="heading-categories">Shop by category</p>
  <div class="macro-section-5">
  <div class="subcategories">
    {% for subcategory in subcategories.value  %}
      <div class="subcategory">
        <img src="{{ subcategory.image | image_url }}" alt="sub image">
        <p>{{ subcategory.name }}</p>
      </div>
    {% endfor %}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "macro-category-5",
  "settings": [],
  "presets": [
  {
    "category": "macro-category-5",
    "name": "Custom macrocategory 5 section Ashley"
  }
]
}
{% endschema %}
