{% style %}
.heading-categories-5{
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 25px;
  text-align: center;
}
.subcategories-5{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}
.subcategory-5 {
  width: 48%;
  margin: 1%;
}
.subcategory-5 p{
  padding: 20px 35px 20px 35px;
  text-align: left;
  font-weight: 400;
  font-size: 18px;
  color: black;
}
.subcategory-5 p::after{
  margin-left: 5px;
  background-image: url('https://cdn.shopify.com/s/files/1/0703/9723/1413/files/32213.png?v=1679027077');
  background-size: 10px 10px;
  display: inline-block;
  width: 10px;
  height: 10px;
  content:"";
}
.subcategory-5 img{
  padding: 20px;
  position: center;
  object-fit: cover;
  height: 400px;
  width: 100%;
}
{% endstyle %}


{% assign macrocategory = page.metafields.custom.reference.value %}
{% assign subcategories = macrocategory.subcategories %}
{% for subcategory in subcategories.value %}
  
<div class="page-width">
  <p class="heading-categories-5">{{ macrocategory.macro_section_title }}</p>
  <div class="macro-section-5">
  <div class="subcategories-5">
    {% for collection in collectionsarray.value  %}
      <div class="subcategory-5">
        <img src="{{ subcategory.image | image_url }}" alt="sub image">
        <p>{{ subcategory.name }}</p>
      </div>
    {% endfor %}
  </div>
  </div>
</div>
{% endfor %}

{% schema %}
{
  "name": "macro-category-5",
  "settings": [{
      "type": "number",
      "id": "subid",
      "label": "id for sub of the macro you want to use for the section",
      "default": 1
    }],
  "presets": [
  {
    "category": "macro-category-5",
    "name": "Custom macrocategory 5 section Ashley"
  }
]
}
{% endschema %}
