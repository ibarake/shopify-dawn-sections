<style>

</style>

<div class="custom-double-banner">

{% for block in section.blocks %}
  
  <style>
  .image{
    background-image: url({{ block.settings.banner-image | image_url}});
    height: 35rem;
  }
  </style>

    <div class="half">
  
    <a href={{ section.settings.button_link }}>

      <div class="image">
        <p class="first-title">{{ block.settings.first-title.title }}</p>
        <p class="second-title">{{ block.settings.second-title.title }}</p>
      </div>

    </a>

    <div class="button-container">
      <a href={{ section.settings.button_link }} class="btn-double-banner">{{ block.settings.button-text.title }}</a>
      <svg
        class="arrow-svg"
        version="1.2"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        overflow="visible"
        preserveAspectRatio="none"
        viewBox="0 0 26 26"
        width="24"
        height="24"
        fill="inherit">
        <g transform="translate(1, 1)">
          <path
            fill="inherit"
            d="m10.8788 17.657-1.41396-1.414 4.24196-4.243-4.24196-4.24298 1.41396-1.414 5.656 5.65698z"
            vector-effect="non-scaling-stroke">
        </path>
      </g>
    </svg>
  </div>
</div>

{% endfor %}

 

</div>

{% schema %}
  {
    "name": "Custom double banner",
    "settings": [],
    "blocks": [
      {
        "type": "image",
        "name": "banner-image",
        "settings": [
          {
            "type": "text",
            "id": "first-title",
            "label": "First title"
          },
          {
            "type": "text",
            "id": "second-title",
            "label": "Second title"
          },
          {
            "type": "text",
            "id": "button-text",
            "label": "Button text"
          },
          {
            "type": "image_picker",
            "label": "Image",
            "id": "banner-image"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
        ],
        "limit": 2
      }
    ],
    "presets": [
      {
        "category": "custom-double-banner",
        "name": "Custom double banner Ashley"
      }
    ]
  }
{% endschema %}