{{ 'macrocategories.css' | asset_url | stylesheet_tag }}

{%- assign macrocategories = shop.metaobjects.macro_categories.values -%}
{%- for macrocategory in macrocategories -%}
  {{ macrocategory.name }}
  <ul>
    {% assign macroitems = page.metafields.custom.reference.value %}
    {% assign subcategories = macroitems.subcategories %}

    {% for subcategory in subcategories.value %}
      <li>{{ subcategory.name }}</li>
    {%- endfor -%}
  </ul>
{%- endfor -%}
