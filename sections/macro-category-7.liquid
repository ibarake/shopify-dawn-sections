{{ 'macrocategories.css' | asset_url | stylesheet_tag }}
 {%- assign macrocategories = shop.metaobjects.macro_categories.values -%}
          
          {%- if macrocategories != blank -%}
            <nav class="header__inline-menu">
              <ul class="list-menu list-menu--inline" role="list">
                {%- for macrocategory in macrocategories -%}
                  <li>
                    <a href="{{ macrocategory.url }}" class="header__menu-item list-menu__item link focus-inset"{% if macrocategory.current %} aria-current="page"{% endif %}>
                      <span {%- if macrocategory.current %} class="header__active-menu-item"{% endif %}>{{ macrocategory.name | escape }}</span>
                    </a>
                      <ul>
                        {% assign macroitems = page.metafields.custom.reference.value %}
                        {% assign subcategories = macroitems.subcategories %}
                        {% for subcategory in subcategories.value %}
                          <li>{{ subcategory.name }}</li>
                        {%- endfor -%}
                      </ul>
                  </li>
                {%- endfor -%}
              </ul>
            </nav>
            {%- endif -%}