  {
    "name": "Custom collection section",
    "settings": [

    {
      "type": "collection_list",
      "id": "collection_list",
      "label": "Collections",
      "limit": 6
    }
      
    ],
    "presets": [
      {
        "category": "custom-collection-banner",
        "name": "Custom collection section Ashley"
      }
    ]
  }
