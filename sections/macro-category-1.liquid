{%- style -%}
  .macrocategory-card-background {
    position: relative;
    width: 100%;
    height: 50vh;
    max-width: 1200px;
    margin: 0 auto;
  }

  .macrocategory-card-background>img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .macrocategory-card-background>.macrocategory-card-information {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    width: 25%;
    z-index: 10;
    background-color: white;
  }
{%- endstyle -%}

{% assign macrocategory = page.metafields.custom.reference.value %}

<div class="macrocategory-card-background">
  {{ macrocategory.image | metafield_tag }}
  <div class="macrocategory-card-information">
    <h1>{{ macrocategory.name }}</h1>
    <p>{{ macrocategory.description }}</p>
  </div>
</div>

{% assign subcategories = macrocategory.subcategories %}

{% for subcategory in subcategories.value %}
  <h1>{{ subcategory.name }}</h1>
  {{ subcategory.image | metafield_tag }}
{% endfor %}
