{% assign macrocategory = page.metafields.custom.reference.value %}

<div class="macrocategory-card-background">
  {{ macrocategory.image | metafield_tag }}
  <div class="macrocategory-card-information">
    <div>
      <h1>{{ macrocategory.name }}</h1>
      <p class="truncate">{{ macrocategory.description }}</p>
    </div>
  </div>
</div>

{% assign subcategories = macrocategory.subcategories %}

{% for subcategory in subcategories.value %}
  <h1>{{ subcategory.name }}</h1>
  {{ subcategory.image | metafield_tag }}
{% endfor %}
