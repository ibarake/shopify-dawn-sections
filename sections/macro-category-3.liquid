{% stylesheet %}
.page-width {
  max-width: 1200px;
  margin: 0 auto;
}

.section-macro-3 {
  display: flex;
  justify-content: center;
  align-items: center;
}

.section-container-3 {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 20px;
  margin-top: 50px;
}

.left {
  display: flex;
  justify-content: center;
  align-items: center;
}

.left img {
  max-width: 100%;
  height: auto;
}

.right {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 20px;
}

.item {
  border: 1px solid #ccc;
  padding: 20px;
  display: flex;
  flex-direction: column;
}

@media only screen and (max-width: 768px) {
  .section-container-3 {
    grid-template-columns: 1fr;
  }

  .right {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }
}
{% endstylesheet %}

{% assign macrocategory = page.metafields.custom.reference.value %}
{% assign subcategories = macrocategory.subcategories %}
<div class="page-width">
  <div class="section-macro-3">
    {% for subcategory in subcategories.value %}
       {% if forloop.index == section.settings.subid %}
          {% assign subcategoriescollections = subcategory.collections %}
          {% assign subcategoriespage = subcategory.page.value %}
          {% assign subimageurl = subcategory.image | image_url %}
         <div class="section-container-3">
           <div class="left">
             
           </div>
          <div class="right" style="grid-template-columns: repeat({{ section.settings.colnum }}, 1fr)">
              <div class="item">
                <p class="bolded-h2">
                <strong>{{ subcategory.macro_section_title }}</strong>
                </p>
                <div class="link-shop">
                    <a href="{{ collection.url }}" class="collection-link">{{ section.settings.x-text }}</a>
                 </div>
              </div>
            {% for collection in subcategoriescollections.value %}
            <div class="item">
              <img src="{{ collection.image | image_url }}" alt="Collection Image" class="img-item">
              <p class="collection-title">{{ collection.title }}</p>
              <p class="collection-description">{{ collection.description }}</p>
            </div>
          {% endfor %}
           </div>      
         </div>
       {% endif %}
    {% endfor %}
  </div>
</div>

