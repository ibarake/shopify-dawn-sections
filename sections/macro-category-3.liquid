{% stylesheet %}
*{
    margin: 0;
    padding: 0;
    list-style: none;
    text-decoration: none;
    border: none;
    outline: none;
}
{% endstylesheet %}

{% assign macrocategory = page.metafields.custom.reference.value %}
{% assign subcategories = macrocategory.subcategories %}
<div class="page-width">
  <div class="section-macro-3">
    {% for subcategory in subcategories.value %}
       {% if forloop.index == section.settings.subid %}
          {% assign subcategoriescollections = subcategory.collections %}
          {% assign subcategoriespage = subcategory.page.value %}
          {% assign subimageurl = subcategory.image | image_url %}
         <div class="section-container-3">
           <div class="left">
             
           </div>
           <div class="right">
              <div class="item">
                <p class="bolded-h2">
                <strong>{{ subcategory.macro_section_title }}</strong>
                </p>
                <div class="link-shop">
                  <a href="#">
                  <strong>Shop all {{ subcategory.name}}</strong>
                   </a>
                 </div>
              </div>
           </div>
             
            
         </div>
       {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
    {
  "name": "Custom macrocategory 3",
  "settings": [
    {
      "type": "number",
      "id": "subid",
      "label": "id for sub of the macro you want to use for the section",
      "default": 2
    },
    {
      "type": "number",
      "id": "colnum",
      "label": "# columns under section",
      "default": 3
    },
    {
      "type": "number",
      "id": "colid",
      "label": "id for collection of the sub you want to use for the section",
      "default": 3
    },
    {
      "type": "text",
      "id": "x-text",
      "label": "button text",
      "default": "shop all dinning"
    },
    {
     "type": "text",
      "id": "x-heading",
      "label": "heading text",
      "default": "styles is on menu"
    }
  ],
  "blocks": [

  ],
  "presets": [
    {
      "category": "macro-category-3",
      "name": "Custom macrocategory 3 section Ashley"
    }
  ]
}
{% endschema %}