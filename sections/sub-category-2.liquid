{{ 'subcategories.css' | asset_url | stylesheet_tag }}

{% assign subcategory = page.metafields.custom.reference.value %}
{% assign collections = subcategory.collections %}

<div class="page-width">
  <p class="heading-categories">Shop by category</p>
  <div class="sub-category-2">
    <div class="collections">
      {% for collection in collections.value %}
        <div class="collection">
          <div class="imagewrap">
            <a href="{{ collectionpage }}"> <img src="{{ collection.image | image_url }}" alt="sub image"></a>
          </div>
          {% assign collectionpage = collection.url %}
           <a href="{{ collectionpage }}">
            <p>{{ collection.title }}</p>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
  "name": "sub-category-2",
  "settings": [],
  "presets": [
  {
    "category": "sub-category-2",
    "name": "Custom subcategory 2 section Ashley"
  }
]
}
{% endschema %}
