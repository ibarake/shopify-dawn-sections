{{ 'subcategories.css' | asset_url | stylesheet_tag }}

{% assign macrocategory = page.metafields.custom.reference.value %}
{% assign collections = subcategory.collections %}
<div class="page-width">
  <div class="section-macro-3">
    {% for collection in collections %}
      {% if forloop.index == section.settings.subid %}
        {% assign collectionpage = collection.page.value %}
        {% assign collectionimageurl = collection.image | image_url %}
        <div class="section-container-3">
          <style>
            .section-container-3 {
              {% if section.settings.box_position == "left" %} flex-direction: row; {% else %}flex-direction: row-reverse;{% endif %}
            }
          </style>
          <div class="leftm3" style="background-image: url('{{ collectionimageurl }}')"></div>
          <div class="right" style="grid-template-columns: repeat({{ section.settings.colnum }}, 1fr)">
            <div class="item" style="background-color:{{ section.settings.Color }};">
              <p class="macro-title" style="color: {{ section.settings.colorText }};">
                <strong>{{ collection.macro_section_title }}</strong>
              </p>
              <div class="link-shop-m3">
                <a href="{{ collectionpage.url }}" class="collection-link" style="color: {{ section.settings.colorText }};">Shop all {{ collection.name }}</a>
              </div>
            </div>
            <div class="item" style="background-color:{{ section.settings.itemColor }};">
              <img src="{{ collection.image | image_url }}" alt="Collection Image" class="img-item">
              <p class="collection-title" style="color: {{ section.settings.colorText }};">{{ collection.title }}</p>
              <p class="collection-description">{{ collection.description }}</p>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>


{% schema %}
    {
  "name": "Custom subcategory 4",
  "settings": [
    {
      "type": "number",
      "id": "subid",
      "label": "id for sub of the macro you want to use for the section",
      "default": 2
    },
    {
    "type": "number",
  "id": "colnum",
  "label": "# of columns",
  "default": 3
    }, 
    {
      "type": "color",
      "id": "Color",
      "label": "Background item title",
      "default": "#F3EFEA"
    },
    {
      "type": "color",
      "id": "itemColor",
      "label": "Background item color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "colorText",
      "label": "Text color",
      "default": "#000000"
    },
    {
    "type": "select",
    "id": "box_position",
    "label": "Horizontal alignment",
    "options": [
      {
        "value": "left",
        "label": "Left"
      },
      {
        "value": "right",
        "label": "Right"
      }

    ],
    "default": "left"
    }
  ],
  "blocks": [

  ],
  "presets": [
    {
      "category": "sub-category-4",
      "name": "Custom subcategory 4 section Ashley"
    }
  ]
}
{% endschema %}